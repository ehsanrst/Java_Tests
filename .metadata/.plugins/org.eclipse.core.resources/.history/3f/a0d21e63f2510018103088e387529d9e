public class Exp2TimeClass {

	private int hour;
	private int minute;
	private int second;

	public void setTime(int h, int m, int s) {
		hour = ((h >= 0 && h <= 24) ? h : 0);
		minute = ((m >= 0 && m < 60) ? m : 0);
		second = ((s >= 0 && s < 60) ? s : 0);
	}

	public String toMilitary() {
		return String.format("%o2d:o2d:o2d", hour, minute, second);
	}
	// o2d means ordinary to desimal
}
