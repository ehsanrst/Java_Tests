package intermidiateJava;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

public class Graphic_2 extends JFrame {
	// class members (variables)
	private JButton b;
	private Color color = (Color.WHITE);
	private JPanel panel;

	// Constructor
	public Graphic_2() {
		super("The title"); // title is only exist for Frame
		panel = new JPanel();
		panel.setBackground(color);

		b = new JButton("please choose a color");
		b.addActionListener( // add an action to this button
		new ActionListener() { // new from actionListener
			// auto complete here
			@Override
			public void actionPerformed(ActionEvent arg0) {
				color = JColorChooser.showDialog(null, "Choose", color);// (position,title,color)
				if (color == null) { // if user click on CANCEL button
					color = (Color.WHITE);
				}

				panel.setBackground(color);
			}
		});

	}
}
