package primeter;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import java.awt.FlowLayout;
import javax.swing.JLabel;
import javax.swing.SwingConstants;
import javax.swing.ImageIcon;
import javax.swing.JTextField;
import java.awt.Font;
import javax.swing.JButton;
import javax.swing.border.MatteBorder;
import java.awt.Color;

public class PrimFrame extends JFrame {

	private JPanel contentPane;
	/**
	 * @wbp.nonvisual location=333,4
	 */
	private final JLabel label = new JLabel("Primeter");
	private JTextField txtT;
	private JButton btnTriangular;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					PrimFrame frame = new PrimFrame();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public PrimFrame() {
		label.setLabelFor(label);
		label.setIcon(new ImageIcon(
				PrimFrame.class
						.getResource("/com/sun/java/swing/plaf/motif/icons/DesktopIcon.gif")));
		setResizable(false);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(550, 200, 750, 500);
		contentPane = new JPanel();
		contentPane.setToolTipText("Primeter of Triangular");
		contentPane.setBorder(new EmptyBorder(0, 0, 0, 0));
		setContentPane(contentPane);
		contentPane.setLayout(new FlowLayout(FlowLayout.CENTER, 5, 200));

		btnTriangular = new JButton("Triangular");
		btnTriangular.setForeground(Color.BLACK);
		btnTriangular.setBackground(Color.LIGHT_GRAY);
		btnTriangular.setFont(new Font("Tahoma", Font.PLAIN, 22));
		contentPane.add(btnTriangular);

		txtT = new JTextField();
		txtT.setFont(new Font("Tahoma", Font.PLAIN, 20));
		txtT.setEnabled(false);
		txtT.setEditable(false);
		txtT.setText("what's yor shape for calculate Primeter?");
		contentPane.add(txtT);
		txtT.setColumns(21);
	}

}
