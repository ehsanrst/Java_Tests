public class Exp1Metod {

	// first lesson
	public void method() {
		System.out.println("this is first method");
	}

	public void method2() {
		System.out.println("this is secound method");
	}

	// Second lesson
	public void simpleMessage(String name) {
		System.out.println("Hello " + name);
	}

	// third lesson
	private String girlName; // just known here

	public String getGirlName() { // method that return name
		return girlName;
	}

	public void setGirlName(String girlName) { // method that set name with
												// nothing return
		this.girlName = girlName;
	}
}
