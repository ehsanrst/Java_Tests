// encapsulation and OverLoading Lesson

public class TimeClass2 {

	private int hour;
	private int minute;
	private int second;

	// Encapsulation is to make PRIVATE setter and getter
	// in this case variables is private and no need to private setter
	public void setHour(int h) {
		// this.hour = h;
		hour = ((h >= 0 && h < 24) ? h : 0);
	}

	public int getHour() {
		return this.hour;
	}

	public void setMinute(int m) {
		// this.minute = m;
		minute = ((m >= 0 && m < 60) ? m : 0);
	}

	public int getMinute() {
		return this.minute;
	}

	public void setSecond(int s) {
		// this.second = s ;
		second = ((s >= 0 && s < 60) ? s : 0);
	}

	public int getSecond() {
		return this.second;
	}

	// Constructor====================
	public TimeClass2() {
		this(0, 0, 0);
	}

	// Overloading Constructor
	public TimeClass2(int h) {
		this(h, 0, 0);

	}

	// Overloading Constructor again
	public TimeClass2(int h, int m) {
		this(h, m, 0);

	}

	// Overloading Constructor again
	public TimeClass2(int h, int m, int s) {
		setTime(h, m, s); // call Method
	}

	// Method========================
	private void setTime(int h, int m, int s) {
		setHour(h);
		setMinute(m);
		setSecond(s);
	}

}
