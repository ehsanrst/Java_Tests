public class TimeClass {

	private int hour;
	private int minute;
	private int second;

	public void setTime(int h, int m, int s) {
		hour = ((h >= 0 && h <= 24) ? h : 0);
		minute = ((m >= 0 && m < 60) ? m : 0);
		second = ((s >= 0 && s < 60) ? s : 0);
	}

	public String toMilitary() {
		return String.format("%02d:%02d:%02d", hour, minute, second);
	}

	// making string from int values
	// 02d means num to Two decimal 5 ==> 05
	// second method just for Military format of hour nums

	public String toString() {
		return String.format("%d:%02d:%02d:%s", ((hour == 0 || hour == 12) ? 12
				: hour % 12));
		// %d means to format it normal num to one decimal 5 ==> 5
	}
}
